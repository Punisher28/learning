<T3DataStructure>
	<sheets>
		<!--
					################################
					  SHEET Page Conf
					################################
				-->
		<pageconf>
			<ROOT>
				<TCEforms>
					<sheetTitle>Page Conf</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Select Type</label>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">List</numIndex>
										<numIndex index="1">Auction->list</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Detail</numIndex>
										<numIndex index="1">Auction->detail;Auction->ajaxAddCart;Auction->ajaxRemoveCart</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">Filter</numIndex>
										<numIndex index="1">Auction->filter</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">Search</numIndex>
										<numIndex index="1">Auction->searchForm</numIndex>
									</numIndex>
									<numIndex index="4" type="array">
										<numIndex index="0">Author</numIndex>
										<numIndex index="1">Auction->detailAuthor</numIndex>
									</numIndex>
									<numIndex index="5" type="array">
										<numIndex index="0">Cart</numIndex>
										<numIndex index="1">Auction->cart</numIndex>
									</numIndex>
									<numIndex index="6" type="array">
										<numIndex index="0">Cart</numIndex>
										<numIndex index="1">Auction->offers</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>
					<!-- PID Detail Page -->
					<settings.detailPid>
						<TCEforms>
							<label>detailPid</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
						</TCEforms>
					</settings.detailPid>
					<!-- PID List Page -->
					<settings.listPid>
						<TCEforms>
							<label>listPid</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
						</TCEforms>
					</settings.listPid>
					<!-- PID Author Page -->
					<settings.detailPidAuthor>
						<TCEforms>
							<label>AuthorPid</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
						</TCEforms>
					</settings.detailPidAuthor>
				</el>
			</ROOT>
		</pageconf>
	</sheets>
</T3DataStructure>
